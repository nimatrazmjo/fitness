html
    head
        title Fitness Records - Nimatullah
        link(href="/bootstrap/dist/css/bootstrap.min.css", rel="stylesheet")
        link(href="/css/fitness.css", rel="stylesheet")
        link(href="/css/custom.css", rel="stylesheet")
        link(href="/toastr/toastr.min.css")
    body(ng-app="apps")
        div.container-fluid
            .row-fluid
                header.navbar.navbar-inverse.navbar-fixed-top.col-sm-12
                    .navbar-header
                        button.navbar-toggle(data-toggle="collapse", data-target="#menu_linkss")
                            span.sr-only Toggle navigation
                            span.icon-bar
                            span.icon-bar
                            span.icon-bar
                        button.btn.btn-sm(, style="margin-top:9px;").toggle_left Menu

                        a.navbar-brand(href="/") Fitness Records
                    .navbar-collapse.collapse#menu_linkss
                        ul.nav.navbar-nav
                            li
                                a(href="/", class="active") Home
                            li
                                a(href="/workouts") Workoutss
                            li
                                a(href="/blog") Blog
                            li
                                a(href="/contact-us") Contact Us
                            li
                                a(href="/gallary") Gallary

                            li
                                a(href="/about_us") About Us

            .row-fluid
                aside.col-sm-3.col-lg-2#left_side
                    .profile-sidebar
                        .profile-userpic
                            img(src="/images/profiles.jpg",class="img img-responsive")

                        .profile-usertitle
                            .profile-usertitle-name Nimatullah Razmjo
                            .profile-usertitle-job Fitness Trainer
                        .profile-userbuttons
                            button.btn.btn-success.btn-sm Follow
                            button.btn.btn-danger.btn-sm Message
                        .profile-usermenu
                            ul.nav
                                li
                                    a(href="#home") Overview
                                        i(class="glyphicon glyphicon-home")
                                li
                                    a(href="#home") Account Settings
                                        i(class="glyphicon glyphicon-user")
                                li
                                    a(href="#home") Logout
                                        i(class="glyphicon glyphicon-log-out")
                section.col-sm-9.col-lg-10#content
                        block content

                footer.text-center.col-xs-12
                    p &copy; 2016 Nimatullah Razmjo.

        include script
        .external_files
            block scripts
        script(type="text/javascript").
            $(".toggle_left").click(function (e) {
                e.preventDefault();
                $("#left_side").toggleClass("toggled");
            });